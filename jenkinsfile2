pipeline {
    agent {
        docker {
            image "postman/newman"
            args '--entrypoint=""'
        }
    }

    stages {
        stage('Installer htmlextra') {
            steps {
                sh "npm install newman-reporter-htmlextra"  
            }
        }

        stage('Vérifier la version de Newman') {
            steps {
                sh "newman --version"
            }
        }

        stage('Test API') {
            steps {
                sh 'npx newman run collections/collection1.json -r cli,htmlextra,junit --reporter-junit-export="newman-report.xml"'
            }
        }
    }

  post {
    always {
        echo 'Publication des résultats des tests...'
        sh 'cat newman-report.xml'  // Affiche le contenu du fichier
        archiveArtifacts artifacts: 'newman-report.xml'
    }
}

}
