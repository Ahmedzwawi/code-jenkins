pipeline{
    agent{
        docker{
            image "postman/newman"
            args '--entrypoint=""'
            //ajout image pour installer htmletxtra
        }
    }

    stages{
        stage('verifier la version de newman'){
            steps{
                sh "newman --version"
                sh "run install -g newman-reporter-htmlextra"
                   }
        }
        stage('test api'){
            steps{
                sh 'newman run collections/collection1.json -r cli,htmlextra,junit --reporter-junit-export="newman-report.xml"'
            }
        }
    }
    post{
        always{
            junit 'newman-report.xml'
        }
    }
}
