pipeline {
    agent {
        docker {
            image "postman/newman"
            args '--entrypoint=""'
        }
    }

    stages {
        stage('Installer htmlextra') {
            steps {
                echo 'Installation du reporter htmlextra...'
                sh "npm install newman-reporter-htmlextra"  
            }
        }

        stage('Vérifier la version de Newman') {
            steps {
                sh "newman --version"
            }
        }

        stage('Test API') {
            steps {
                echo 'Exécution des tests API...'
                sh 'npx newman run collections/collection1.json -r cli,htmlextra,junit --reporter-junit-export="newman-report.xml" --reporter-htmlextra-export="newman-report.html"'
            }
        }
    }

    post {
        always {
            echo 'Publication des résultats des tests...'
            junit 'newman-report.xml' // Affiche les résultats dans Jenkins
            archiveArtifacts artifacts: 'newman-report.xml, newman-report.html' // Permet de télécharger les rapports
        }
    }
}
