pipeline {
    agent {
        docker {
            image "postman/newman"
            args '--entrypoint=""'
        }
    }

    stages {
        stage('Installer htmlextra') {
            steps {
                echo 'Installation de newman-reporter-htmlextra...'
                sh "npm install -g newman-reporter-htmlextra"
            }
        }

        stage('Vérifier la version de Newman') {
            steps {
                sh "newman --version"
            }
        }

        stage('Test API') {
            steps {
                sh 'newman run collections/collection1.json -r cli,htmlextra,junit --reporter-junit-export="newman-report.xml"'
            }
        }
    }

    post {
        always {
            echo 'Publication des résultats des tests...'
            junit 'newman-report.xml'
        }
    }
}
